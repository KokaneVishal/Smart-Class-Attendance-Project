<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnalysisFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=": Analysis and Reports :" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:background="?android:attr/listDivider" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/analysisBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="5sp"
        android:text="get Attendance Analysis.CSV file"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="?android:attr/listDivider"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tvCurrentDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5sp"
        android:text="Date Time" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5sp"
        android:text="REPORTS IMAGES" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="?android:attr/listDivider"
        tools:ignore="SmallSp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reportImgView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40sp"
                android:layout_marginVertical="10sp"
                android:contentDescription="@string/ImgReport" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="?android:attr/listDivider"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/reportImgView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40sp"
                android:layout_marginVertical="10sp"
                android:contentDescription="@string/ImgReport" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="?android:attr/listDivider"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/reportImgView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40sp"
                android:layout_marginVertical="10sp"
                android:contentDescription="@string/ImgReport" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="?android:attr/listDivider"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/reportImgView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40sp"
                android:layout_marginVertical="10sp"
                android:contentDescription="@string/ImgReport" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="?android:attr/listDivider"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
